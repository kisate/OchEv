<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/graph_fragment_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/igraph_view_background">

    <com.example.ochev.ui.InputView
        android:id="@+id/input_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.ochev.ui.FigureDrawingView
        android:id="@+id/figure_drawing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.ochev.ui.InputDrawView
        android:id="@+id/input_draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/side_environment_settings_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/side_environment_settings_background"
        android:elevation="48dp"
        android:orientation="vertical"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/enter_side_environment_settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editing_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/history_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />


</RelativeLayout>